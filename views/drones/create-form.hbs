<div id="create-drone-view">

  <h1>Create a new drone</h1>

  <form id="drone-formulario" action="" method="POST">
    <div class="drone-input">
      <label for="name">Name:</label>
      <input type="text" name="name" required="true" />

    </div>
    <div class="drone-input">
      <label for="propellers">Propellers:</label>
      <input type="text" name="propellers" required="true" />
    </div>
    <div class="drone-input">
      <label for="maxSpeed">MaxSpeed:</label>
      <input type="text" name="maxSpeed" required="true" />
    </div>

    <button id="formulario-button">Agregar Drone</button>

  </form>

</div>